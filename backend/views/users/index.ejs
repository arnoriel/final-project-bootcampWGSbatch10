<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
        }
        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #f8f9fa;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }
        .sidebar h2 {
            font-size: 20px;
            margin-bottom: 20px;
        }
        .sidebar a {
            display: block;
            color: #333;
            padding: 10px 0;
            text-decoration: none;
            font-weight: bold;
        }
        .sidebar a:hover {
            background-color: #ddd;
            padding-left: 10px;
        }
        .content {
            flex-grow: 1;
            padding: 20px;
        }
        .content h1 {
            font-size: 28px;
            margin-bottom: 20px;
        }
        .content a.btn {
            display: inline-block;
            padding: 10px 20px;
            color: #fff;
            background-color: #007bff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
        }
        .content a.btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Admin Dashboard</h2>
        <a href="/admin">Dashboard</a>
        <a href="/users">Users Table</a>
        <a href="/logout">Logout</a>
    </div>
    <!-- Main content -->
    <div class="content">
        <div class="container mt-5">
            <h1>Manajemen Karyawan</h1>
            <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addUserModal">Add User</button>

            <!-- Display error messages -->
            <% if (errors && errors.length > 0) { %>
                <div class="alert alert-danger">
                    <% errors.forEach(error => { %>
                        <p><%= error.msg %></p>
                    <% }) %>
                </div>
            <% } %>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Divisi</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td>
                            <% if (user.image) { %>
                                <img src="/uploads/<%= user.image %>" alt="<%= user.name %>" width="50">
                            <% } else { %>
                                <span>No Image</span>
                            <% } %>
                        </td>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.divisi %></td>
                        <td><%= user.phone %></td>
                        <td>
                            <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editUserModal<%= user.id %>">Edit</button>
                            <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#showUserModal<%= user.id %>">Show Details</button>
                            <form action="/users/delete/<%= user.id %>" method="POST" class="d-inline">
                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>

                    <!-- Edit User Modal -->
                    <div class="modal fade" id="editUserModal<%= user.id %>" tabindex="-1" aria-labelledby="editUserModalLabel<%= user.id %>" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editUserModalLabel<%= user.id %>">Edit User</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form action="/users/edit/<%= user.id %>" method="POST" enctype="multipart/form-data">
                                        <div class="mb-3">
                                            <label for="image<%= user.id %>" class="form-label">Profile Image</label>
                                            <input type="file" class="form-control" id="image<%= user.id %>" name="image">
                                            <% if (user.image) { %>
                                                <p>Current Image: <%= user.image %></p>
                                            <% } %>
                                        </div>
                                        <div class="mb-3">
                                            <label for="name<%= user.id %>" class="form-label">Name</label>
                                            <input type="text" class="form-control" id="name<%= user.id %>" name="name" value="<%= user.name %>">
                                        </div>
                                        <div class="mb-3">
                                            <label for="email<%= user.id %>" class="form-label">Email</label>
                                            <input type="email" class="form-control" id="email<%= user.id %>" name="email" value="<%= user.email %>">
                                        </div>
                                        <div class="mb-3">
                                            <label for="divisi<%= user.id %>" class="form-label">Divisi</label>
                                            <input type="text" class="form-control" id="divisi<%= user.id %>" name="divisi" value="<%= user.divisi %>">
                                        </div>
                                        <div class="mb-3">
                                            <label for="phone<%= user.id %>" class="form-label">Phone</label>
                                            <input type="text" class="form-control" id="phone<%= user.id %>" name="phone" value="<%= user.phone %>">
                                            <% if (errors && errors.length > 0) { %>
                                                <% errors.forEach(error => { %>
                                                    <% if (error.param === 'phone') { %>
                                                        <div class="text-danger"><%= error.msg %></div>
                                                    <% } %>
                                                <% }) %>
                                            <% } %>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Show User Modal -->
                    <div class="modal fade" id="showUserModal<%= user.id %>" tabindex="-1" aria-labelledby="showUserModalLabel<%= user.id %>" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="showUserModalLabel<%= user.id %>">User Details</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <center>
                                    <p><strong>Photo Profile</strong>
                                    <br>
                                    <% if (user.image) { %>
                                        <img src="/uploads/<%= user.image %>" alt="<%= user.name %>" width="100">
                                    <% } else { %>
                                        <span>No Image</span>
                                    <% } %>
                                    </p>
                                </center>
                                    <br>
                                    <p><strong>Name:</strong> <%= user.name %></p>
                                    <p><strong>Email:</strong> <%= user.email %></p>
                                    <p><strong>Divisi:</strong> <%= user.divisi %></p>
                                    <p><strong>Phone:</strong> <%= user.phone %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Add User Modal -->
    <div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addUserModalLabel">Add Karyawan</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/users/add" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="image" class="form-label">Profile Image</label>
                            <input type="file" class="form-control" id="image" name="image">
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="divisi" class="form-label">Divisi</label>
                            <input type="text" class="form-control" id="divisi" name="divisi" required>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="text" class="form-control" id="phone" name="phone" required>
                            <% if (errors && errors.length > 0) { %>
                                <% errors.forEach(error => { %>
                                    <% if (error.param === 'phone') { %>
                                        <div class="text-danger"><%= error.msg %></div>
                                    <% } %>
                                <% }) %>
                            <% } %>
                        </div>
                        <button type="submit" class="btn btn-primary">Add User</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
